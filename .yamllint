extends: default

ignore: |
  kustomizations-folder

rules:
  line-length:
    max: 120
    level: warning

  comments:
    min-spaces-from-content: 1
    level: warning

  trailing-spaces:
    level: warning

  colons:
    max-spaces-before: 0
    max-spaces-after: 1
    level: warning

  new-line-at-end-of-file:
    level: warning

  indentation:
    spaces: 2
    indent-sequences: false
    level: error  # may cause a syntax error, it makes sense to protect it

  document-start:
    level: warning
  
  empty-lines:
    max: 2
    level: warning
  
  brackets:
    max-spaces-inside: 1
    level: warning

  indent-sequences: whatever
